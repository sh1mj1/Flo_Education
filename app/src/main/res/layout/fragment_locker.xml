<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Locker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="보관함"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Login_tv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="로그인"
        android:textColor="@color/flo_signature"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Locker_tv"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/Saved_songs_tl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:tabSelectedTextColor="@color/flo_signature"
        app:tabIndicatorColor="@color/flo_signature"
        app:tabTextColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Locker_tv"

        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="저장한 곡"

            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="음악파일" />

    </com.google.android.material.tabs.TabLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/Saved_songs_tl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-2dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/select_all_btn_cv"
        app:layout_constraintStart_toStartOf="@+id/Locker_tv"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        android:outlineSpotShadowColor="@color/transparent"
        app:cardBackgroundColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"
        >
        <ImageView
            android:id="@+id/select_off_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_playlist_select_off"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체선택"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:paddingStart="30dp"
            android:paddingVertical="3dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/play_all_song_cv"
        android:layout_marginLeft="20dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintStart_toEndOf="@+id/select_all_btn_cv"
        android:outlineSpotShadowColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/progressBar">
        <ImageView
            android:id="@+id/play_all_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_browse_arrow_right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체듣기"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:paddingStart="30dp"
            android:paddingVertical="3dp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/select_all_btn_cv"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locker_songs_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_songs_in_locker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_all_btn_cv"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>